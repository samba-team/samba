#!/bin/sh

PREVPATH=`dirname $0`

WAF=./buildtools/bin/waf

# using JOBS=1 gives maximum compatibility with
# systems like AIX which have broken threading in python
JOBS=1
export JOBS

# Make sure we don't have any library preloaded.
unset LD_PRELOAD

cd . || exit 1
$PYTHON $WAF configure $@ || exit 1
cd $PREVPATH
