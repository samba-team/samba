            for t in default_scripts:
                tgt = os.path.join(bld.env.CTDB_DATADIR, fmt % (t))
                name = os.path.join(bld.env.CTDB_ETCDIR, fmt % (t))
                bld.symlink_as(name, tgt)

    bld.SAMBA_GENERATOR('ctdb-functions',
