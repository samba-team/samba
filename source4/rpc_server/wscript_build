#!/usr/bin/env python

bld.SAMBA_SUBSYSTEM('DCERPC_SHARE',
	source='common/share_info.c',
	autoproto='common/share.h',
	deps='ldb share',
	enabled=bld.CONFIG_SET('WITH_NTVFS_FILESERVER'),
	)

