if not bld.CONFIG_SET('USING_SYSTEM_ASN1_COMPILE'):
    HEIMDAL_SUBSYSTEM('HEIMDAL_ASN1_GEN_HOSTCC',
                      'lib/asn1/gen.c',
                      includes='../heimdal/lib/asn1',
                      group='hostcc_build_main',
                      cflags=HEIMDAL_LEX_CFLAGS(),
