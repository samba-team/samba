        )


    HEIMDAL_GENERATOR(
        name = 'HEIMDAL_NORMALIZE_TABLE',
        rule="${PYTHON} '${SRC[0].abspath()}' '${SRC[1].abspath()}' '${SRC[2].abspath()}' '${SRC[1].parent.abspath(env)}'",
